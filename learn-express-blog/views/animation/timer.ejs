<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>计时器</title>
  <style media="screen">
    *{
      padding: 0;
      margin: 0;
    }
    html,body{
      width: 100%;
      height: 100%;
    }
    .box{
      width: 100px;
      height: 100px;
      background: pink;
      margin: 20px auto;
      line-height: 100px;
      font-size: 40px;
      color: #000;
      text-align: center;
      border-radius: 10px;
      box-shadow: 2px 2px 10px 2px #ccc;
    }
    .box::after{
      content: attr(data-order);
    }
    .btn-box{
      text-align: center;
      margin-top: 20px;
    }
    .btn{
      padding: 5px 20px;
      color: #fff;
      margin-right: 10px;
      background-color: green;
      border-radius: 5px;
    }
    .btn-box a{
      text-decoration: none;
    }
  </style>
</head>
<body>
  <!-- <video class="top-big-video" id="topBigVideo" loop="">
      <source src="http://ossweb-img.qq.com/images/lol/v1/banner/big-v8.webm" type="video/webm">
      <source src="http://ossweb-img.qq.com/images/lol/v1/banner/big-v8.mp4" type="video/mp4">
  </video> -->
  <div class="box" id="box" data-order="0"></div>
  <div class="btn-box">
    <a href="javascript:;" class="btn" id="btn-start">开始</a>
    <a href="javascript:;" class="btn" id="btn-end">结束</a>
  </div>
  <script type="text/javascript">
    // var video = document.getElementById('topBigVideo');
    // // 定时器
    // setTimeout(function(){
    //   video.play();
    // },3000);
    var interval = null;
    function countUp(){

    interval = setInterval(function(){
          var order = box.getAttribute('data-order');
          order = parseInt(order) + 1;
          box.setAttribute('data-order',order);
      },1000)

      this.removeEventListener('click',countUp,false);
    }

    function countEnd(){
      clearInterval(interval);
      var startBtn = document.getElementById('btn-start');
      startBtn.addEventListener('click',countUp,false);
    }

    window.onload = function(){
      var box = document.getElementById('box');
      box.setAttribute('data-order','1');
      var startBtn = document.getElementById('btn-start');
      var endBtn  = document.getElementById('btn-end');
      // var clickN = 0;
      startBtn.addEventListener('click',countUp,false);

      endBtn.addEventListener('click',countEnd,false);

      // startBtn.removeEventListener('click',countUp,false)
      // var div=document.querySelector('div');
      // var fontSize=window.getComputedStyle(,'::before').getPropertyValue('font-size');
    }
  </script>
</body>
</html>
